{
  "name": "@contentrain/sdk",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "bin": {
    "contentrain": "dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins.d.ts",
      "import": "./dist/plugins.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsup --config tsup.config.ts",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:types": "tsc --noEmit",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "dependencies": {
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  }
}
